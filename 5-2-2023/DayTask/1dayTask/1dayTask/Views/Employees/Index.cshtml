@model IEnumerable<_1dayTask.Models.Employee>

@{
    ViewBag.Title = "Index";
}
@section adds{
<div>
    Hello Adds

</div>
}
<p>
    <h5>Last Order</h5>
    <div>
        @Html.Action("Lastorder")
       @Html.ActionLink("Show all Orders","Index","Orders")
    </div>
</p>
<h1>Customers</h1>

    @using (Html.BeginForm())
    {
        <label>Search By:</label>
        <input type="radio" name="searchtype" value="1" class="" />
        <label>First Name</label>
        <input type="radio" name="searchtype" value="2" />
        <label>Last Name</label>
        <input type="radio" name="searchtype" value="3" />
        <label>Email</label><br />
        <div style="display:flex;flex-direction:row;justify-content:center">
            <input type="text" name="searchtext" class="form-control" />
            <input type="submit" value="Search" class="btn btn-primary" />
        </div>
    }


<p>
    @Html.ActionLink("Create New", "Create", null, htmlAttributes: new { @class = "btn btn-primary" })
</p>
<table class="table table-responsive table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Last_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.E_mail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Job_Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.picture)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CV)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.First_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Last_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.E_mail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Job_Title)
            </td>
            <td>
                @if (item.Gender == true)
                {
                    <span>Male</span>
                }
                else
                {
                    <span>Female</span>
                }
            </td>
            <td>
                <img src="/@item.picture" width="60px" height="60px" />
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => )*@
                <a href="@item.CV" download="@item.CV">@item.CV.Split('/')[2]</a>
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id }, new { @class = "btn btn-success" })
                @Html.ActionLink("Details", "Details", new { id = item.id }, new { @class = "btn btn-info" })
                @Html.ActionLink("Delete", "Delete", new { id = item.id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
